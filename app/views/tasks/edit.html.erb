<h1>Modifier la tâche</h1>

<%= form_with(model: @task, local: true) do |form| %>
  <div>
    <%= form.label :name, "Nom de la tâche" %>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.label :details, "Détails" %>
    <%= form.text_area :details %>
  </div>

   <div>
    <%= form.label :completed, "Terminée ?" %>
    <%= form.check_box :completed %>
  </div>

  <div>
    <%= form.submit "Mettre à jour", class: "btn btn-success" %>
  </div>
<% end %>

<%= link_to "Retour", tasks_path, class: "btn btn-secondary" %>
